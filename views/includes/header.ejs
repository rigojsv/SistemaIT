<header>
    <nav class="fixed top-0 z-50 w-full bg-white border-b border-gray-200">
        <div class="p-3 lg:px-5 lg:pl-3">
            <div class="flex items-center justify-between">
                <div class="flex items-center justify-start">
                    <% if(auth){ %>
                    <button data-drawer-target="logo-sidebar" data-drawer-toggle="logo-sidebar"
                        aria-controls="logo-sidebar" type="button"
                        class="inline-flex items-center p-2 text-sm text-gray-500 rounded-lg sm:hidden hover:bg-gray-100 focus:outline-none">
                        <span class="sr-only">Open sidebar</span>
                        <svg class="w-6 h-6" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20"
                            xmlns="http://www.w3.org/2000/svg">
                            <path clip-rule="evenodd" fill-rule="evenodd"
                                d="M2 4.75A.75.75 0 012.75 4h14.5a.75.75 0 010 1.5H2.75A.75.75 0 012 4.75zm0 10.5a.75.75 0 01.75-.75h7.5a.75.75 0 010 1.5h-7.5a.75.75 0 01-.75-.75zM2 10a.75.75 0 01.75-.75h14.5a.75.75 0 010 1.5H2.75A.75.75 0 012 10z">
                            </path>
                        </svg>
                    </button>
                    <% } %>
                    <a href="/" class="flex items-center gap-2 text-blue-600 text-xl font-bold">
                        <i class="fas fa-laptop-medical text-4xl"></i>
                        <span class="self-center text-xl font-bold sm:text-3xl whitespace-nowra">Sistema IT</span>
                    </a>
                </div>
                <% if (auth) { %>
                <div class="flex items-center">
                    <div class="flex items-center ms-3">
                        <div>
                            <button type="button"
                                class="flex text-sm bg-gray-800 rounded-full focus:ring-4 focus:ring-gray-300"
                                aria-expanded="false" data-dropdown-toggle="dropdown-user">
                                <span class="sr-only">Open user menu</span>
                                <img class="w-10 h-10 rounded-full"
                                    src="https://yt3.googleusercontent.com/of7UX9meJXSztXFK3lMBkN97PQiqaMyVvwWiBXiQ3Lz1fgZlAHG-xKtdhtIRZR59Iqxt9ijKEg=s900-c-k-c0x00ffffff-no-rj"
                                    alt="user photo">
                            </button>
                        </div>
                        <div class="z-50 hidden my-4 text-base list-none bg-white divide-y divide-gray-100 rounded-sm shadow-sm"
                            id="dropdown-user">
                            <div class="px-4 py-3" role="none">
                                <p class="text-sm text-gray-900" role="none">
                                    <%= user.nombre %>
                                </p>
                                <p class="text-sm font-medium text-gray-900 truncate" role="none">
                                    <%= user.correo %>
                                </p>
                            </div>
                            <ul class="py-1" role="none">
                                <li>
                                    <a href="/dashboard" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 "
                                        role="menuitem">Dashboard</a>
                                </li>
                                <li>
                                    <a href="/config" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 "
                                        role="menuitem">Configuracion</a>
                                </li>
                                <li>
                                    <a href="/signout" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 "
                                        role="menuitem">Cerrar Sesion</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
    </nav>

    <% if (auth) { %>
    <aside id="logo-sidebar"
        class="fixed top-0 left-0 z-40 w-64 h-screen pt-22 transition-transform -translate-x-full bg-white border-r border-gray-200 sm:translate-x-0 "
        aria-label="Sidebar">
        <div class="h-full px-3 pb-4 overflow-y-auto bg-white">
            <ul class="space-y-2 font-medium">
                <li>
                    <a href="/dashboard" class="flex items-center p-2 text-gray-900 rounded-lg hover:bg-gray-100  group">
                        <i class="fas fa-home text-gray-500 transition duration-75 group-hover:text-blue-600"></i>
                        <span class="ms-3">Dashboard</span>
                    </a>
                </li>
                <li>
                    <a href="/equipment" class="flex items-center p-2 text-gray-900 rounded-lg hover:bg-gray-100 group">
                        <i class="fas fa-laptop text-gray-500 transition duration-75 group-hover:text-blue-600"></i>
                        <span class="flex-1 ms-3 whitespace-nowrap">Equipos</span>
                    </a>
                </li>
                <% if (user.rol === 'admin') { %>
                <li>
                    <a href="/assignments" class="flex items-center p-2 text-gray-900 rounded-lg hover:bg-gray-100 group">
                        <i class="fas fa-users text-gray-500 transition duration-75 group-hover:text-blue-600"></i>
                        <span class="flex-1 ms-3 whitespace-nowrap">Asignaciones</span>
                    </a>
                </li>
                <% } %>
                <li>
                    <a href="/repairs" class="flex items-center p-2 text-gray-900 rounded-lg hover:bg-gray-100 group">
                        <i class="fas fa-tools text-gray-500 transition duration-75 group-hover:text-blue-600"></i>
                        <span class="flex-1 ms-3 whitespace-nowrap">Reparaciones</span>
                    </a>
                </li>
                <% if (user.rol === 'admin') { %>
                <li>
                    <a href="/reports" class="flex items-center p-2 text-gray-900 rounded-lg hover:bg-gray-100 group">
                        <i class="fas fa-chart-bar text-gray-500 transition duration-75 group-hover:text-blue-600"></i>
                        <span class="flex-1 ms-3 whitespace-nowrap">Reportes</span>
                    </a>
                </li>
                <li>
                    <a href="/register" class="flex items-center p-2 text-gray-900 rounded-lg hover:bg-gray-100 group">
                        <i class="fa-solid fa-user-plus text-gray-500 transition duration-75 group-hover:text-blue-600"></i>
                        <span class="flex-1 ms-3 whitespace-nowrap">Registrar</span>
                    </a>
                </li>
                <% } %>
            </ul>
        </div>
    </aside>
    <% } %>
</header>
<script src="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.js"></script>