<div class="container mx-auto px-4 py-6 mt-14 min-h-screen">
    <div class="page-header flex justify-between items-center mb-6">
        <h1 class="text-4xl font-semibold">Gestión de Asignaciones</h1>
        <a href="/assignments/new"
            class="btn btn-primary inline-flex items-center bg-blue-600 text-white px-4 py-2 rounded-md shadow hover:bg-blue-700">
            <i class="fas fa-plus mr-2"></i> Nueva Asignación
        </a>
    </div>

    <div class="card bg-white p-6 rounded-lg shadow-md mb-6">
        <form method="GET" action="/assignments">
            <div class="filters flex flex-wrap gap-4 mb-6">
                <input type="text" placeholder="Buscar asignación..."
                    class="search-input w-full md:w-auto p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-600" />
                <select
                    class="filter-select w-full md:w-auto p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-600">
                    <option value="">Departamento</option>
                    <option value="it">IT</option>
                    <option value="hr">RRHH</option>
                    <option value="finance">Finanzas</option>
                </select>

                <select
                    class="filter-select p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-600">
                    <option value="">Tipo de Equipo</option>
                    <option value="laptop">Laptop</option>
                    <option value="desktop">Desktop</option>
                </select>
                <button type="submit" class="btn btn-primary bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700">
                    Filtrar
                </button>
            </div>
        </form>
        <div class="table-container overflow-x-auto rounded-sm">
            <table class="min-w-full table-auto text-sm border-collapse">
                <thead class="bg-gray-100">
                    <tr>
                        <th class="px-4 py-2 text-left">ID</th>
                        <th class="px-4 py-2 text-left">Usuario</th>
