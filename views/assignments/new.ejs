<div class="container mx-auto px-4 py-6 mt-14 min-h-screen">
    <div class="page-header mb-6">
        <h1 class="text-4xl font-semibold">Nueva Asignación</h1>
    </div>

    <div class="card bg-white p-6 rounded-lg shadow-md">
        <form class="form-grid grid grid-cols-1 sm:grid-cols-2 gap-6">
            <div class="form-group">
                <label for="user" class="block text-sm font-medium text-gray-700">Usuario</label>
                <select id="user" class="form-control w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-600" required>
                    <option value="">Seleccionar usuario...</option>
                    <option value="1">María González</option>
                    <option value="2">Carlos Ruiz</option>
                    <option value="3">Juan Pérez</option>
                </select>
            </div>

            <div class="form-group">
                <label for="department" class="block text-sm font-medium text-gray-700">Departamento</label>
                <select id="department" class="form-control w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-600" required>
                    <option value="">Seleccionar departamento...</option>
                    <option value="it">IT</option>
                    <option value="hr">RRHH</option>
                    <option value="finance">Finanzas</option>
                    <option value="sales">Ventas</option>
                </select>
            </div>

            <div class="form-group">
                <label for="equipment" class="block text-sm font-medium text-gray-700">Equipo</label>
                <select id="equipment" class="form-control w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-600" required>
                    <option value="">Seleccionar equipo...</option>
                    <option value="1">Laptop HP EliteBook (SN123456)</option>
                    <option value="2">Desktop Dell OptiPlex (SN789012)</option>
                </select>
            </div>

            <div class="form-group">
                <label for="assignmentDate" class="block text-sm font-medium text-gray-700">Fecha de Asignación</label>
                <input type="date" id="assignmentDate" class="form-control w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-600" required>
            </div>

            <div class="form-group col-span-2">
                <label for="notes" class="block text-sm font-medium text-gray-700">Notas de Asignación</label>
                <textarea id="notes" class="form-control w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-600" rows="3"></textarea>
            </div>



            <div class="form-actions flex justify-between items-center mt-6 col-span-2">
                <button type="button" class="btn btn-secondary bg-gray-400 text-white px-4 py-2 rounded-md shadow hover:bg-gray-600" onclick="history.back()">Cancelar</button>
                <button type="submit" class="btn btn-primary bg-blue-600 text-white px-6 py-2 rounded-md shadow hover:bg-blue-700">Crear Asignación</button>
            </div>
        </form>
    </div>
</div>
