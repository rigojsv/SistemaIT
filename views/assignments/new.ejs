<div class="container mx-auto px-4 py-6 mt-14 min-h-screen">
    <div class="page-header mb-6">
        <h1 class="text-4xl font-semibold">Nueva Asignaci贸n</h1>
    </div>

    <div class="card bg-white p-6 rounded-lg shadow-md">
        <form method="POST" action="/assignments" class="form-grid grid grid-cols-1 sm:grid-cols-2 gap-6">
            <div class="form-group">
                <label for="cliente" class="block text-sm font-medium text-gray-700">Usuario</label>
                <select id="cliente" name="id_cliente" class="form-control w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-600" required>
                    <option value="">Seleccionar usuario...</option>
                    <% clientes.forEach(cliente => { %>
                        <option value="<%= cliente.id_usuario %>"><%= cliente.nombre %></option>
                    <% }) %>
                </select>
                
            </div>

            <div class="form-group">
                <label for="equipo" class="block text-sm font-medium text-gray-700">Equipo</label>
                <select id="equipo" name="id_equipo" class="form-control w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-600" required>
                    <option value="">Seleccionar equipo...</option>
                    <% equipos.forEach(equipo => { %>
                        <option value="<%= equipo.id_equipo %>"><%= equipo.tipo %> - <%= equipo.marca %> <%= equipo.modelo %></option>
                    <% }) %>
                </select>
            </div>

            <div class="form-group">
                <label for="fecha_asignacion" class="block text-sm font-medium text-gray-700">Fecha de Asignaci贸n</label>
                <input type="date" id="fecha_asignacion" name="fecha_asignacion" class="form-control w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-600" required>
            </div>

            <div class="form-group col-span-2">
                <label for="notas" class="block text-sm font-medium text-gray-700">Notas de Asignaci贸n</label>
                <textarea id="notas" name="notas" class="form-control w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-600" rows="3"></textarea>
            </div>

            <div class="form-actions flex justify-between items-center mt-6 col-span-2">
                <button type="button" class="btn btn-secondary bg-gray-400 text-white px-4 py-2 rounded-md shadow hover:bg-gray-600" onclick="history.back()">Cancelar</button>
                <button type="submit" class="btn btn-primary bg-blue-600 text-white px-6 py-2 rounded-md shadow hover:bg-blue-700">Crear Asignaci贸n</button>
            </div>
        </form>
    </div>
</div>