<div class="container mx-auto px-4 py-6 mt-14">
    <h1 class="text-4xl font-semibold mb-6">Dashboard</h1>

    <div class="stats-grid grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 mb-6">
        <!-- Total Equipos -->
        <div class="card bg-white p-6 rounded-lg shadow-md">
            <h3 class="text-xl font-semibold mb-4">Total Equipos</h3>
            <div class="stat-value text-3xl font-bold mb-4">150</div>
            <div class="stat-chart h-40">
                <canvas id="equipmentChart"></canvas>
            </div>
        </div>

        <!-- Reparaciones Activas -->
        <div class="card bg-white p-6 rounded-lg shadow-md">
            <h3 class="text-xl font-semibold mb-4">Reparaciones Activas</h3>
            <div class="stat-value text-3xl font-bold mb-4">12</div>
            <div class="stat-chart h-40">
                <canvas id="repairsChart"></canvas>
            </div>
        </div>

        <!-- Asignaciones -->
        <div class="card bg-white p-6 rounded-lg shadow-md">
            <h3 class="text-xl font-semibold mb-4">Asignaciones</h3>
            <div class="stat-value text-3xl font-bold mb-4">125</div>
            <div class="stat-chart h-40">
                <canvas id="assignmentsChart"></canvas>
            </div>
        </div>
    </div>

    <!-- Últimas Actividades -->
    <div class="card bg-white p-6 rounded-lg shadow-md">
        <h3 class="text-xl font-semibold mb-4">Últimas Actividades</h3>
        <div class="table-container overflow-x-auto rounded-sm">
            <table class="min-w-full table-auto text-sm">
                <thead class="bg-gray-100">
                    <tr>
                        <th class="px-4 py-2 text-left">Fecha</th>
                        <th class="px-4 py-2 text-left">Tipo</th>
                        <th class="px-4 py-2 text-left">Descripción</th>
                        <th class="px-4 py-2 text-left">Estado</th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="border-b border-gray-200">
                        <td class="px-4 py-2">2024-01-20</td>
                        <td class="px-4 py-2">Reparación</td>
                        <td class="px-4 py-2">Laptop HP - Cambio de disco duro</td>
                        <td class="px-4 py-2 font-bold text-yellow-400">En proceso</td>
                    </tr>
                    <tr class="border-b border-gray-200">
                        <td class="px-4 py-2">2024-01-19</td>
                        <td class="px-4 py-2">Asignación</td>
                        <td class="px-4 py-2">Desktop Dell - Usuario: Juan Pérez</td>
                        <td class="px-4 py-2 font-bold text-green-400">Completado</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Equipment Status Chart (Doughnut)
    new Chart(document.getElementById('equipmentChart'), {
        type: 'doughnut',
        data: {
            labels: ['En uso', 'En reparación', 'Disponible'],
            datasets: [{
                data: [70, 15, 15],
                backgroundColor: ['#2563eb', '#dc2626', '#16a34a']
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false
        }
    });

    // Repairs Chart (Bar)
    new Chart(document.getElementById('repairsChart'), {
        type: 'bar',
        data: {
            labels: ['Ene', 'Feb', 'Mar', 'Abr'],
            datasets: [{
                label: 'Reparaciones',
                data: [12, 19, 15, 12],
                backgroundColor: '#2563eb'
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false
        }
    });

    // Assignments Chart (Line)
    new Chart(document.getElementById('assignmentsChart'), {
        type: 'line',
        data: {
            labels: ['Ene', 'Feb', 'Mar', 'Abr'],
            datasets: [{
                label: 'Asignaciones',
                data: [100, 110, 120, 125],
                borderColor: '#2563eb',
                tension: 0.4
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false
        }
    });
});
</script>
