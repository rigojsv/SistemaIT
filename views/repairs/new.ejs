<div class="container mx-auto px-4 py-6 mt-14">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-2xl font-semibold">Nueva Solicitud de Reparación</h1>
    </div>

    <div class="bg-white p-6 rounded-lg shadow">
        <form class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Equipo -->
            <div class="form-group">
                <label for="equipment" class="block text-sm font-semibold text-gray-700">Equipo</label>
                <select id="equipment" class="w-full border px-4 py-2 border-gray-300 rounded-md text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500" required>
                    <option value="">Seleccionar equipo...</option>
                    <option value="1">Laptop HP EliteBook (SN123456)</option>
                    <option value="2">Desktop Dell OptiPlex (SN789012)</option>
                </select>
            </div>

            <!-- Reportado por -->
            <div class="form-group">
                <label for="reportedBy" class="block text-sm font-semibold text-gray-700">Reportado por</label>
                <select id="reportedBy" class="w-full border px-4 py-2 border-gray-300 rounded-md text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500" required>
                    <option value="">Seleccionar usuario...</option>
                    <option value="1">María González</option>
                    <option value="2">Carlos Ruiz</option>
                </select>
            </div>

            <!-- Prioridad -->
            <div class="form-group">
                <label for="priority" class="block text-sm font-semibold text-gray-700">Prioridad</label>
                <select id="priority" class="w-full border px-4 py-2 border-gray-300 rounded-md text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500" required>
                    <option value="low">Baja</option>
                    <option value="medium">Media</option>
                    <option value="high">Alta</option>
                    <option value="urgent">Urgente</option>
                </select>
            </div>

            <!-- Técnico Asignado -->
            <div class="form-group">
                <label for="technician" class="block text-sm font-semibold text-gray-700">Técnico Asignado</label>
                <select id="technician" class="w-full border px-4 py-2 border-gray-300 rounded-md text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500" required>
                    <option value="">Asignar técnico...</option>
                    <option value="1">Juan Técnico</option>
                    <option value="2">Ana Técnico</option>
                </select>
            </div>

            <!-- Descripción del Problema -->
            <div class="form-group col-span-2">
                <label for="problem" class="block text-sm font-semibold text-gray-700">Descripción del Problema</label>
                <textarea id="problem" class="w-full border px-4 py-2 border-gray-300 rounded-md text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500" rows="4" required></textarea>
            </div>

            <!-- Notas Adicionales -->
            <div class="form-group col-span-2">
                <label for="notes" class="block text-sm font-semibold text-gray-700">Notas Adicionales</label>
                <textarea id="notes" class="w-full border px-4 py-2 border-gray-300 rounded-md text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500" rows="3"></textarea>
            </div>

            <!-- Form Actions -->
            <div class="form-actions flex justify-between items-center col-span-2">
                <button type="button" class="bg-gray-400 text-white px-6 py-2 rounded-md hover:bg-gray-600" onclick="history.back()">Cancelar</button>
                <button type="submit" class="bg-blue-600 text-white px-6 py-2 rounded-md hover:bg-blue-700">Crear Solicitud</button>
            </div>
        </form>
    </div>
</div>
