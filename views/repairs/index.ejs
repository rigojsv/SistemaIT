<div class="container mx-auto px-4 py-6 mt-14 min-h-screen">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-2xl font-semibold">Gestión de Reparaciones</h1>
        <a href="/repairs/new" class="text-center bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition">
            <i class="fas fa-plus"></i> Nueva Reparación
        </a>
    </div>

    <!-- Status Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
        <div class="bg-white p-6 rounded-lg shadow flex flex-col items-center">
            <h3 class="text-xl font-semibold mb-4">Pendientes</h3>
            <div class="text-3xl font-bold text-gray-800">5</div>
        </div>
        <div class="bg-white p-6 rounded-lg shadow flex flex-col items-center">
            <h3 class="text-xl font-semibold mb-4">En Proceso</h3>
            <div class="text-3xl font-bold text-gray-800">3</div>
        </div>
        <div class="bg-white p-6 rounded-lg shadow flex flex-col items-center">
            <h3 class="text-xl font-semibold mb-4">Completadas</h3>
            <div class="text-3xl font-bold text-gray-800">12</div>
        </div>
    </div>

    <!-- Filters -->
    <div class="bg-white p-4 rounded-lg shadow mb-6">
        <form method="GET" action="/repairs"></form>
        <div class="filters flex flex-wrap gap-4 mb-6">
            <input type="text" placeholder="Buscar reparación..." class="w-full md:w-auto border px-4 py-2 border-gray-300 rounded-md text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500">
            <select class="w-full md:w-auto border px-4 py-2 border-gray-300 rounded-md text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500">
                <option value="">Estado</option>
                <option value="pending">Pendiente</option>
                <option value="in-progress">En Proceso</option>
                <option value="completed">Completada</option>
            </select>
            <select class="w-full md:w-auto border px-4 py-2 rounded-md border-gray-300 text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500">
                <option value="">Técnico</option>
                <option value="tech1">Juan Técnico</option>
                <option value="tech2">Ana Técnico</option>
            </select>
            <button type="submit" class="btn btn-primary bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700">
                Filtrar
            </button>
        </div>
    </div>

    <!-- Repairs Table -->
    <div class="bg-white p-4 rounded-lg shadow">
        <div class="overflow-x-auto">
            <table class="w-full table-auto border-collapse rounded-sm">
                <thead class="bg-gray-100">
                    <tr>
                        <th class="px-4 py-2 text-left text-gray-800 font-semibold">ID</th>
                        <th class="px-4 py-2 text-left text-gray-800 font-semibold">Equipo</th>
                        <th class="px-4 py-2 text-left text-gray-800 font-semibold">Problema</th>
                        <th class="px-4 py-2 text-left text-gray-800 font-semibold">Técnico</th>
                        <th class="px-4 py-2 text-left text-gray-800 font-semibold">Estado</th>
                        <th class="px-4 py-2 text-left text-gray-800 font-semibold">Fecha Inicio</th>
                        <th class="px-4 py-2 text-left text-gray-800 font-semibold">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="border-b border-gray-200">
                        <td class="px-4 py-2">REP001</td>
                        <td class="px-4 py-2">Laptop HP EliteBook</td>
                        <td class="px-4 py-2">Falla en disco duro</td>
                        <td class="px-4 py-2">Juan Técnico</td>
                        <td class="px-4 py-2 font-bold text-yellow-400">En Proceso</td>
                        <td class="px-4 py-2">2024-01-15</td>
                        <td class="px-4 py-2">
                            <a href="/repairs/REP001/edit" class="text-blue-400 hover:text-blue-800">
                                <i class="fas fa-edit text-xl"></i>
                            </a>
                            <a href="/repairs/REP001" class="ml-4 text-gray-400 hover:text-blue-800">
                                <i class="fas fa-clipboard-list text-xl"></i>
                            </a>
                        </td>
                    </tr>
                    <tr class="border-b border-gray-200">
                        <td class="px-4 py-2">REP002</td>
                        <td class="px-4 py-2">Desktop Dell OptiPlex</td>
                        <td class="px-4 py-2">No enciende</td>
                        <td class="px-4 py-2">Ana Técnico</td>
                        <td class="px-4 py-2 font-bold text-gray-400">Pendiente</td>
                        <td class="px-4 py-2">2024-01-18</td>
                        <td class="px-4 py-2">
                            <a href="/repairs/REP002/edit" class="text-blue-400 hover:text-blue-800">
                                <i class="fas fa-edit text-xl "></i>
                            </a>
                            <a href="/repairs/REP002" class="ml-4 text-gray-400 hover:text-blue-800">
                                <i class="fas fa-clipboard-list text-xl"></i>
                            </a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
