<div class="container mx-auto px-4 py-6">
    <div class="page-header flex justify-between items-center mb-6">
        <h1 class="text-3xl font-semibold">Gestión de Equipos</h1>
        <a href="/equipment/new" class="btn btn-primary flex items-center bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700">
            <i class="fas fa-plus mr-2"></i> Nuevo Equipo
        </a>
    </div>

    <div class="card bg-white p-6 rounded-lg shadow-md">
        <form method="GET" action="/equipment">
            <div class="filters flex space-x-4 mb-6">
                <input type="text" name="search" placeholder="Buscar equipo..." class="search-input block w-full p-3 border border-gray-300 rounded-md">
                <select name="type" class="filter-select block w-48 p-3 border border-gray-300 rounded-md">
                    <option value="">Tipo de Equipo</option>
                    <option value="laptop">Laptop</option>
                    <option value="desktop">Desktop</option>
                    <option value="printer">Impresora</option>
                </select>
                <select name="status" class="filter-select block w-48 p-3 border border-gray-300 rounded-md">
                    <option value="">Estado</option>
                    <option value="active">Activo</option>
                    <option value="repair">En Reparación</option>
                    <option value="inactive">Inactivo</option>
                </select>
                <button type="submit" class="btn btn-primary bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700">
                    Filtrar
                </button>
            </div>
        </form>

        <div class="table-container overflow-x-auto">
            <table class="min-w-full table-auto text-sm">
                <thead class="bg-gray-100">
                    <tr>
                        <th class="px-4 py-2 text-left">ID</th>
                        <th class="px-4 py-2 text-left">Tipo</th>
                        <th class="px-4 py-2 text-left">Marca</th>
                        <th class="px-4 py-2 text-left">Modelo</th>
                        <th class="px-4 py-2 text-left">Serial</th>
                        <th class="px-4 py-2 text-left">Estado</th>
                        <th class="px-4 py-2 text-left">Usuario Asignado</th>
                        <th class="px-4 py-2 text-left">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% equipos.forEach((equipo) => { %>
                        <tr class="border-b">
                            <td class="px-4 py-2"><%= equipo.id_equipo %></td>
                            <td class="px-4 py-2"><%= equipo.tipo %></td>
                            <td class="px-4 py-2"><%= equipo.marca %></td>
                            <td class="px-4 py-2"><%= equipo.modelo %></td>
                            <td class="px-4 py-2"><%= equipo.serie %></td>
                            <td class="px-4 py-2"><%= equipo.estado %></td>
                            <td class="px-4 py-2"><%= equipo.usuario_asignado || 'N/A' %></td>
                            <td class="px-4 py-2">
                                <a href="/equipment/<%= equipo.id_equipo %>/edit" class="btn-icon text-blue-600 hover:text-blue-800">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a href="/equipment/<%= equipo.id_equipo %>/history" class="btn-icon text-gray-600 hover:text-gray-800 ml-4">
                                    <i class="fas fa-history"></i>
                                </a>
                                <a href="/repairs/new?equipment=<%= equipo.id_equipo %>" class="btn-icon text-green-600 hover:text-green-800 ml-4">
                                    <i class="fas fa-tools"></i>
                                </a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>
