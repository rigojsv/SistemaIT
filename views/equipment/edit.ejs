<div class="container mx-auto px-4 py-6">
    <div class="page-header mb-6">
        <h1 class="text-3xl font-semibold text-gray-800">Editar Equipo</h1>
    </div>

    <div class="bg-white p-6 rounded-lg shadow-md max-w-2xl mx-auto">
        <form action="/equipment/<%= equipo.id_equipo %>/edit" method="POST" class="space-y-6">
            <div>
                <label for="tipo" class="block text-sm font-medium text-gray-700 mb-1">Tipo de Equipo</label>
                <select id="tipo" name="tipo" class="w-full p-3 border border-gray-300 rounded-md">
                    <option value="Laptop" <%= equipo.tipo === 'Laptop' ? 'selected' : '' %>>Laptop</option>
                    <option value="Desktop" <%= equipo.tipo === 'Desktop' ? 'selected' : '' %>>Desktop</option>
                    <option value="Impresora" <%= equipo.tipo === 'Impresora' ? 'selected' : '' %>>Impresora</option>
                    <option value="Monitor" <%= equipo.tipo === 'Monitor' ? 'selected' : '' %>>Monitor</option>
                </select>
            </div>

            <div>
                <label for="marca" class="block text-sm font-medium text-gray-700 mb-1">Marca</label>
                <input type="text" id="marca" name="marca" value="<%= equipo.marca %>" class="w-full p-3 border border-gray-300 rounded-md" required>
            </div>

            <div>
                <label for="modelo" class="block text-sm font-medium text-gray-700 mb-1">Modelo</label>
                <input type="text" id="modelo" name="modelo" value="<%= equipo.modelo %>" class="w-full p-3 border border-gray-300 rounded-md" required>
            </div>

            <div>
                <label for="serie" class="block text-sm font-medium text-gray-700 mb-1">Número de Serie</label>
                <input type="text" id="serie" name="serie" value="<%= equipo.serie %>" class="w-full p-3 border border-gray-300 rounded-md" required>
            </div>

            <div>
                <label for="fecha_adquisicion" class="block text-sm font-medium text-gray-700 mb-1">Fecha de Adquisición</label>
                <input type="date" id="fecha_adquisicion" name="fecha_adquisicion" value="<%= equipo.fecha_adquisicion.toISOString().split('T')[0] %>" class="w-full p-3 border border-gray-300 rounded-md" required>
            </div>

            <div class="flex justify-end space-x-4">
                <a href="/equipment" class="bg-gray-200 text-gray-700 px-4 py-2 rounded-md hover:bg-gray-300">Cancelar</a>
                <button type="submit" class="bg-blue-600 text-white px-6 py-2 rounded-md hover:bg-blue-700">Guardar Cambios</button>
            </div>
        </form>
    </div>
</div>
