<div class="container mx-auto px-4 py-6 mt-14">
    <div class="page-header mb-6">
        <h1 class="text-3xl font-semibold">Nuevo Equipo</h1>
    </div>

    <div class="card bg-white p-6 rounded-lg shadow-md">
        <form action="/equipment/new" method="POST">
            <div class="form-group">
                <label for="type" class="block text-sm font-medium text-gray-700">Tipo de Equipo</label>
                <select id="type" name="type" class="form-control mt-2 block w-full p-3 border border-gray-300 rounded-md" required>
                    <option value="">Seleccionar tipo...</option>
                    <option value="Laptop">Laptop</option>
                    <option value="Desktop">Desktop</option>
                    <option value="Impresora">Impresora</option>
                    <option value="Monitor">Monitor</option>
                </select>
            </div>

            <div class="form-group">
                <label for="brand" class="block text-sm font-medium text-gray-700">Marca</label>
                <input type="text" id="brand" name="brand" class="form-control mt-2 block w-full p-3 border border-gray-300 rounded-md" required>
            </div>

            <div class="form-group">
                <label for="model" class="block text-sm font-medium text-gray-700">Modelo</label>
                <input type="text" id="model" name="model" class="form-control mt-2 block w-full p-3 border border-gray-300 rounded-md" required>
            </div>

            <div class="form-group">
                <label for="serial" class="block text-sm font-medium text-gray-700">Número de Serie</label>
                <input type="text" id="serial" name="serial" class="form-control mt-2 block w-full p-3 border border-gray-300 rounded-md" required>
            </div>

            <div class="form-group">
                <label for="purchaseDate" class="block text-sm font-medium text-gray-700">Fecha de Adquisición</label>
                <input type="date" id="purchaseDate" name="purchaseDate" class="form-control mt-2 block w-full p-3 border border-gray-300 rounded-md" required>
            </div>

            <div class="form-actions flex justify-between items-center mt-6">
                <button type="button" class="btn btn-secondary bg-gray-400 text-white px-6 py-2 rounded-md hover:bg-gray-600" onclick="history.back()">Cancelar</button>
                <button type="submit" class="btn btn-primary bg-blue-600 text-white px-6 py-2 rounded-md hover:bg-blue-700">Guardar Equipo</button>
            </div>
        </form>
    </div>
</div>
